# Firebase Configuration
# Get your Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Project Configuration
# These values are already configured in firebase_options.dart
# FIREBASE_PROJECT_ID=orion-d1229
# FIREBASE_API_KEY=your_firebase_api_key_here

# Vertex AI Configuration
# Google Cloud Project ID for Vertex AI
VERTEX_AI_PROJECT_ID=orion-d1229
# Google Cloud Region for Vertex AI services
VERTEX_AI_LOCATION=us-central1
# Service account key file path (for server-side authentication)
# VERTEX_AI_SERVICE_ACCOUNT_KEY_PATH=path/to/service-account-key.json

# Development Configuration
# Set to true for development mode
DEBUG_MODE=true

# TTS Configuration
# Set Gemini TTS as primary cloud provider and default voice
# provider: system | cloud | kitten | ondevice | kitten_local
TTS_PROVIDER=cloud
TTS_VOICE=Kore
TTS_SAMPLE_RATE=24000

# Audio Configuration
# Maximum recording duration in seconds
MAX_RECORDING_DURATION=60
# Audio quality settings for web
WEB_AUDIO_SAMPLE_RATE=44100
WEB_AUDIO_BIT_RATE=128000
# Audio format for transcription
TRANSCRIPTION_AUDIO_FORMAT=aac

# AI Configuration
# Maximum tokens for AI responses
MAX_AI_TOKENS=2048
# AI request timeout in seconds
AI_REQUEST_TIMEOUT=30
# Maximum retry attempts for AI requests
AI_MAX_RETRIES=3
# Temperature for text generation (0.0-1.0)
AI_TEXT_TEMPERATURE=0.7
# Temperature for transcription (0.0-1.0, lower = more accurate)
AI_TRANSCRIPTION_TEMPERATURE=0.1

# Memory Configuration
# Maximum number of memories to search for context
MAX_MEMORY_SEARCH_RESULTS=5

# Web Audio Configuration
# Browser-specific audio settings
WEB_AUDIO_ECHO_CANCELLATION=true
WEB_AUDIO_NOISE_SUPPRESSION=true
WEB_AUDIO_AUTO_GAIN_CONTROL=true
